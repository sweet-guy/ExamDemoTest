<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ScoreResultActivity">
    <include
        android:id="@+id/result_head_layout"
        layout="@layout/public_exam_head"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/result_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result_head_layout">
        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="224dp">
            <com.wdcloud.examlibrary.wight.ExamResultView
                android:id="@+id/examResultView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/exam_time_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result_cardview">
        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="86dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/accuracy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#202124"
                    android:textStyle="bold"
                    android:text="20%"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#5F6368"
                    android:text="正确率"/>
            </LinearLayout>
            <View
                android:id="@+id/center_line"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="#DBDBDB"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exam_minute_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#202124"
                    android:textStyle="bold"
                    android:text="36min"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#5F6368"
                    android:text="答题时间"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/exam_sum_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exam_time_cardview">
        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="68dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exam_sum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202124"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F6368"
                    android:textSize="12sp"
                    android:text="总题数"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exam_sure_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202124"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F6368"
                    android:textSize="12sp"
                    android:text="答对"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exam_erro_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202124"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F6368"
                    android:textSize="12sp"
                    android:text="答错"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/bt_look_exam"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exam_sum_card"
        android:text="查看试卷"
        android:textColor="#ffff"
        android:background="@drawable/bg_next_button"/>
</RelativeLayout>